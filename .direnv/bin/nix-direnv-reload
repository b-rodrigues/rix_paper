#!/usr/bin/env bash
set -e
if [[ ! -d "/home/brodrigues/Documents/repos/rix_paper" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/brodrigues/Documents/repos/rix_paper")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/brodrigues/Documents/repos/rix_paper" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/brodrigues/Documents/repos/rix_paper/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/brodrigues/Documents/repos/rix_paper/.envrc" "/home/brodrigues/Documents/repos/rix_paper/.direnv"/*.rc
